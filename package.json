{
  "name": "stak",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "dotenv -e ./.env.development.local -- pnpm --filter @stak/db run generate",
    "db:migrate": "dotenv -e ./.env.development.local -- pnpm --filter @stak/db run migrate",
    "db:push": "dotenv -e ./.env.development.local -- pnpm --filter @stak/db run push"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
